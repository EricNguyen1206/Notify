# ==============================================
# Backend-Specific Environment Variables
# ==============================================
# Copy this to .env for local backend development
# These variables are only used when running backend independently

# Server Configuration
NOTIFY_HOST=localhost
NOTIFY_PORT=8080
NOTIFY_JWT_SECRET=local-dev-secret-change-me
NOTIFY_JWT_EXPIRE=24h

# Database Configuration (for local development)
POSTGRES_URL=postgres://postgres:password@localhost:5432/notify_dev?sslmode=disable

# Redis Configuration (for local development)
REDIS_URL=redis://localhost:6379/0

# Development settings
DEBUG=true
LOG_LEVEL=debug

# Optional: External service configurations
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_USER=
# SMTP_PASSWORD=

# Optional: File upload configuration
# MAX_FILE_SIZE=10MB
# ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Note: When using Docker Compose, these values are overridden
# by the environment variables defined in docker-compose.yml
